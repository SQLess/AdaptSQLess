<?xml version="1.0" encoding="UTF-8"?>
<config>
    <SimplificationStrategy>

        <!-- Clause Simplification -->
        <REMOVEORDERBY>true</REMOVEORDERBY>
        <REMOVEWITH>true</REMOVEWITH>
        <REMOVEUSEINDEX>true</REMOVEUSEINDEX>
        <REMOVEUNIONLEFT>true</REMOVEUNIONLEFT>
        <REMOVEUNIONRIGHT>true</REMOVEUNIONRIGHT>
        <REMOVEGROUPBY>true</REMOVEGROUPBY>
        <REMOVEHAVING>true</REMOVEHAVING>
        <REMOVELIMIT>true</REMOVELIMIT>
        <REMOVEWHERE>true</REMOVEWHERE>

        <!-- Column Simplification -->
        <REMOVECOLUMN>true</REMOVECOLUMN>

        <!-- Subquery Simplification -->
        <REMOVEUNUSEDEF>true</REMOVEUNUSEDEF>

        <!-- Expression Simplification -->
        <REMOVEBITOPLEFT>true</REMOVEBITOPLEFT>
        <REMOVEBITOPRIGHT>true</REMOVEBITOPRIGHT>
        <REMOVELOGICALOPLEFT>true</REMOVELOGICALOPLEFT>
        <REMOVELOGICALOPRIGHT>true</REMOVELOGICALOPRIGHT>

        <!-- Optimizer Hints and other Modifiers -->
        <REMOVESQLHINT>true</REMOVESQLHINT>

    </SimplificationStrategy>
</config>